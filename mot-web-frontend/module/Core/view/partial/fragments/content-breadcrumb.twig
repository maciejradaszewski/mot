{% if contentBreadcrumbs %}
    <div class="content-breadcrumb bold-small">
        <nav>
            <ol class="group">
                {% for name, url in contentBreadcrumbs %}
                    {% if loop.last %}
                        <li>
                            {{ name }}
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ url }}">{{ name }}</a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ol>
        </nav>
    </div>
{% endif %}