{% include 'partial/forms/validationSummary.twig'
with {'title' : 'There was a problem','validationMessages' : viewModel.getValidationMessages} %}

{{ form().openTag(viewModel.form)|raw }}
{{ csrfToken() }}
<fieldset>

    {{ MotFormRow(viewModel.form.get(
    constant('DvsaCommon\\InputFilter\\Account\\SecurityQuestionAnswersInputFilter::FIELD_NAME_FIRST_QUESTION_ID'))
    ) }}

    {{ MotFormRow(viewModel.form.get(
    constant('DvsaCommon\\InputFilter\\Account\\SecurityQuestionAnswersInputFilter::FIELD_NAME_FIRST_ANSWER'))
    ) }}

    {{ MotFormRow(viewModel.form.get(
    constant('DvsaCommon\\InputFilter\\Account\\SecurityQuestionAnswersInputFilter::FIELD_NAME_SECOND_QUESTION_ID'))
    ) }}

    {{ MotFormRow(viewModel.form.get(
    constant('DvsaCommon\\InputFilter\\Account\\SecurityQuestionAnswersInputFilter::FIELD_NAME_SECOND_ANSWER'))
    ) }}

</fieldset>

<div class="form-group">
    <details>
        <summary role="button" aria-controls="dateDetails" id="expandable-link" aria-expanded="false">
            <span class="summary">Forgotten your security questions?</span>
        </summary>
        <div class="panel-indent" id="dateDetails" aria-hidden="true">
                <div class="text">
                    <p>
                        {% set helpdeskVariables = {
                        'postContactText' : ' to reset your questions',
                        'config': viewModel.helpdeskConfig,
                        } %}
                        {% include 'partial/gds/general/contactHelpdesk.twig' with helpdeskVariables %}
                    </p>
                </div>
        </div>
    </details>
</div>

<nav class="content-navigation">
    {{ MotFormRow(viewModel.form.get('submitSecurityAnswers')) }}
    <ul class="content-navigation__secondary">
        <li>
            <a href="{{ viewModel.getUrlBack|raw }}">Back</a>
        </li>
    </ul>
</nav>
{{ form().closeTag(viewModel.form)|raw }}
