    </tr>
    </thead>
    <tbody>

    <?php if ($brakeTestConfiguration->isSingleWheelInFront() === true) : ?>
        <?php echo $this->partial(
            'brake-test-results-class-3-and-above/service-brake-effort-row-single-input',
            [
                'brakeTestResult' => $brakeTestResult,
