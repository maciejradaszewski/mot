                                        <option <?php echo $escSelected; ?>  value="<?php echo $this->escapeHtmlAttr($testType['code']); ?>"><?php echo $this->escapeHtml($testType['description']); ?></option>
                                    <?php endforeach; ?>
                                <?php endif; ?>
                            </select>
                        </div>
