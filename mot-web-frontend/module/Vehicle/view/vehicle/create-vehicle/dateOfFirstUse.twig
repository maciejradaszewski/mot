{% if viewModel.form.errorMessages %}
    <div class="validation-summary">
        <h2 class="heading-medium">There was a problem with the information</h2>
        <ol>
            {% for message in viewModel.form.errorMessages %}
                <li>{{ message|raw }}</li>
            {% endfor %}
        </ol>
    </div>
{% endif %}

<form method="post" action="" novalidate>
    {{ csrfToken() }}
    <div class="form-group{% if viewModel.form.getDayElement.messages is not empty %} has-error {% endif %}">
        <fieldset>
            <legend class="form-label visuallyhidden">Date of first use</legend>
            <div class="form-date">
                <span class="form-hint">For example, 31 3 1980</span>
                {% if viewModel.form.getDayElement.messages is not empty %}
                    <span class="validation-message">{{ viewModel.form.getDayElement.messages[0] }}</span>
                {% endif %}
                <div class="form-group form-group-day">
                    <label for="dateDay">{{ viewModel.form.getDayElement.label }}</label>
                    {{ formElement(viewModel.form.getDayElement) }}
                </div>
                <div class="form-group form-group-month">
                    <label for="dateMonth">{{ viewModel.form.getMonthElement.label }}</label>
                    {{ formElement(viewModel.form.getMonthElement) }}
                </div>
                <div class="form-group form-group-year">
                    <label for="dateYear">{{ viewModel.form.getYearElement.label }}</label>
                    {{ formElement(viewModel.form.getYearElement) }}
                </div>
            </div>
        </fieldset>
    </div>

    <div class="form-group">
        <details>
            <summary role="button" aria-controls="dateDetails" id="expandable-link" aria-expanded="false" tabindex="0">
                <span class="summary">Not sure of the date of first use?</span>
            </summary>
            <div class="panel-indent" id="dateDetails" aria-hidden="true">
                <div class="text">
                    <p>Check the vehicle's V5C or registration certificate</p>

                    <p>If you can't find the exact date, check the MOT manual to see if it's needed.</p>
                </div>
            </div>
        </details>
    </div>

    <fieldset>
        <div class="form-group">
            <nav class="content-navigation">
                <input type="submit" value="{{ viewModel.continueButtonLabel }}" id="continue" class="button" id="continueButton">
                <ul class="content-navigation__secondary">
                    <li>
                        <a href="{{ url('create-vehicle/new-vehicle-country-of-reg') }}" id="back-button">Back</a>
                    </li>
                </ul>
            </nav>
        </div>
    </fieldset>
</form>