<form method="post" name="VehicleSearch" id="VehicleSearch">
    {{ csrfToken() }}
    {{ viewModel.prgHelper|raw }}
    <div class="text">
        <p class="lede">Check that the information you've entered is correct before you confirm the record and start the MOT test.</p>
    </div>
    <table class="table-summary">
        <tbody>
         <tr>
            <th scope="col" class="table-summary__key">Registration mark <br>VIN</th>
            <td scope="col" class="table-summary__value">
                {{ viewModel.registrationNumber }}
                <br>{{ viewModel.vinNumber }}
                <a href="{{ url('create-vehicle/new-vehicle-vrm-and-vin') }}" id="change-vrm-and-vin" class="table-summary__action">Change<span class="visuallyhidden"> registration or VIN</span></a>
            </td>
        </tr>
        <tr>
            <th scope="col" class="table-summary__key">Make and model</th>
            <td scope="col" class="table-summary__value">
                {{ viewModel.make }}, {{ viewModel.model }}
                <a href="{{ url('create-vehicle/new-vehicle-make') }}" id="change-make-and-model" class="table-summary__action">Change<span class="visuallyhidden"> make or model</span></a>
            </td>
        </tr>
        <tr>
            <th scope="col" class="table-summary__key">Engine and fuel type</th>
            <td scope="col" class="table-summary__value">
                {{ viewModel.fuelNameAndEngine }}
                <a href="{{ url('create-vehicle/new-vehicle-engine') }}" id="change-fuel-and-engine" class="table-summary__action">Change<span class="visuallyhidden"> engine or fuel type</span></a>
            </td>
        </tr>
        <tr>
            <th scope="col" class="table-summary__key">Test class</th>
            <td scope="col" class="table-summary__value">
                {{ viewModel.class }}
                <a href="{{ url('create-vehicle/new-vehicle-class') }}" id="change-test-class" class="table-summary__action">Change<span class="visuallyhidden"> test class</span></a>
            </td>
        </tr>
        <tr>
            <th scope="col" class="table-summary__key">Colour</th>
            <td scope="col" class="table-summary__value">
                {{ viewModel.primaryColour }}{% if viewModel.secondaryColour is not empty %}, {{ viewModel.secondaryColour }} {% endif %}
                <a href="{{ url('create-vehicle/new-vehicle-colour') }}" id="change-colour" class="table-summary__action">Change<span class="visuallyhidden"> colour</span></a>
            </td>
        </tr>
        <tr>
            <th scope="col" class="table-summary__key">Country</th>
            <td scope="col" class="table-summary__value">
                {{ viewModel.country }}
                <a href="{{ url('create-vehicle/new-vehicle-country-of-reg') }}" id="change-country" class="table-summary__action">Change<span class="visuallyhidden"> country of registration</span></a>
            </td>
        </tr>
        <tr>
            <th scope="col" class="table-summary__key">Date of first use</th>
            <td scope="col" class="table-summary__value">
                {{ viewModel.date }}
                <a href="{{ url('create-vehicle/new-vehicle-first-use-date') }}" id="change-date-of-first-use" class="table-summary__action">Change<span class="visuallyhidden"> date of first use</span></a>
            </td>
        </tr>
        </tbody>
    </table>
    <div class="form-group">
        <nav class="content-navigation">
            <input type="submit" value="Confirm and start test" class="button " id="confirmAndStartTest">
            <ul class="content-navigation__secondary">
                <li>
                    <a href="{{ url('vehicle-search') }}" id="cancel-create-vehicle">Cancel and return to find a vehicle</a>
                </li>
            </ul>
        </nav>
    </div>
</form>