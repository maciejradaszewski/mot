{% if errorMessages is not empty %}
    <div class="validation-summary">
        <h2 class="heading-medium">There was a problem with the information you entered</h2>
        <ol>
            <li>{{ errorMessages.message }}</li>
        </ol>
    </div>
{% endif %}

<form name="itemDetailsForm" id="itemDetails" method="post">
    {{ csrfToken() }}
    <fieldset>
        <h3 class="heading-medium">Location</h3>
        <div class="form-group">
            <label for="locationLateral" class="form-label">Lateral</label>
            <select name="locationLateral" id="locationLateral" class="form-control-select">
                <option value="n/a" {% if observedDefect.lateralLocation == "n/a" %} selected {% endif %}>n/a</option>
                <option value="nearside" {% if observedDefect.lateralLocation == "nearside" %} selected {% endif %}>Nearside</option>
                <option value="central" {% if observedDefect.lateralLocation == "central" %} selected {% endif %}>Central</option>
                <option value="offside" {% if observedDefect.lateralLocation == "offside" %} selected {% endif %}>Offside</option>
            </select>
        </div>
        <div class="form-group">
            <label for="locationLongitudinal" class="form-label">Longitudinal</label>
            <select name="locationLongitudinal" id="locationLongitudinal" class="form-control-select">
                <option value="n/a" {% if observedDefect.longitudinalLocation == "n/a" %} selected {% endif %}>n/a</option>
                <option value="front" {% if observedDefect.longitudinalLocation == "front" %} selected {% endif %}>Front</option>
                <option value="rear" {% if observedDefect.longitudinalLocation == "rear" %} selected {% endif %}>Rear</option>
            </select>
        </div>
        <div class="form-group">
            <label for="locationVertical" class="form-label">Vertical</label>
            <select name="locationVertical" id="locationVertical" class="form-control-select">
                <option value="n/a" {% if observedDefect.verticalLocation == "n/a" %} selected {% endif %}>n/a</option>
                <option value="upper" {% if observedDefect.verticalLocation == "upper" %} selected {% endif %}>Upper</option>
                <option value="lower" {% if observedDefect.verticalLocation == "lower" %} selected {% endif %}>Lower</option>
                <option value="inner" {% if observedDefect.verticalLocation == "inner" %} selected {% endif %}>Inner</option>
                <option value="outer" {% if observedDefect.verticalLocation == "outer" %} selected {% endif %}>Outer</option>
            </select>
        </div>
    </fieldset>

    <div class="form-group {% if errorMessages is not empty %} has-error {% endif %}">
        <h3 class=" heading-medium">Additional information {{ observedDefect.comment }}</h3>
        <label for="comment" class="form-label">Add any further comments if required</label>
        {% if errorMessages is not empty %}
            <span class="validation-message">{{ errorMessages.displayMessage }}</span>
        {% endif %}

        <textarea type="text" name="comment" id="comment" class="form-control">{{ observedDefect.userComment }}</textarea>
    </div>

    <div class="form-group">
        <label class="block-label" for="failureDangerous">
            <input type="checkbox" name="failureDangerous" id="failureDangerous"
                    {% if observedDefect.dangerous %} checked {% endif %}>This defect is dangerous
        </label>
    </div>

    <nav class="content-navigation">
        <input type="hidden" name="confirmDetailPage" value="">
        <button id="submit-defect" type="submit" class="button">Edit {{ type }}</button>

        <ul class="content-navigation__secondary">
            <li>
                <a href="{{ defectJourneyUrl().goBack() }}">
                    Cancel and return to {{ context }}</a>
            </li>
        </ul>
    </nav>
</form>